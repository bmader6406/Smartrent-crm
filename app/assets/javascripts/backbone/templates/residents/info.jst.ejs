<% if(App.vars.isPropertyPage) { %>
  <div class="crud-buttons">
    <table>
      <tr>
        <% if (App.vars.ability.can("cud", "Resident")) { %>
          <td>
            <a href="<%= edit_path %>" class="btn btn-lg btn-primary edit"> <i class="fa fa-pencil"></i> Edit</a>
          </td>
          <td>
            <a href="#" class="btn btn-lg btn-default archive"> <i class="fa fa-trash"></i> Archive</a>
          </td>

        <% } else if (App.vars.ability.can("read", "Resident")) { %>
          <td>
            <!-- placeholder -->
          </td>
        <% } %>
      </tr>
    </table>
  </div>
<% } %>

<div class="card">
  <% if(App.vars.isPropertyPage) { %>
    <% if (App.vars.residentObj && App.vars.residentObj.unit.roommate) { %>
      <span class="badge" style="float:right">roommate</span>
    <% } %>
    <b href="#" class="blue-text"><%= unit_text %></b>
  <% } %>
  
  <h3> <a href="#" class="resident-details"><%= full_name %></a> </h3>
  <ul class="list-unstyled">
    <li class="blue-text" style="word-break: break-all;">
      <%= email %>
    </li>
    <li>
      <span class="blue-text"><%= primary_phone %></span>
    </li>
  </ul>
</div>

<% if(App.vars.isPropertyPage) { %>
  <div class="nav-details">
    <% if (App.vars.isCrm) { %>
      <a href="#resident-history" class="btn btn-lg btn-default tab-nav">
        <i class="fa fa-angle-right"></i>
        Resident Activity 
      </a>
      
      <% if (smartrent) { %>
        <a href="#smartrent" class="btn btn-lg btn-default tab-nav">
          <i class="fa fa-angle-right"></i>
          SmartRent
        </a>

      <% } else if ( App.vars.isSmartrent ) { %>
        <a href="#smartrent" class="btn btn-lg btn-default tab-nav">
          <i class="fa fa-angle-right"></i>
          SmartRent
        </a>
      <% } %>
      
      <a href="#unit-history" class="btn btn-lg btn-primary tab-nav">
        <i class="fa fa-angle-right"></i>
        Resident History
      </a>
      
      <a href="http://my.hy.ly/x-ray/1445903171874510885/leads?email=<%=email%>" target="_blank" class="btn btn-lg btn-default">
        <i class="fa fa-angle-right"></i>
        Marketing History
      </a>
      <a href="#resident-roommates" class="btn btn-lg btn-default tab-nav">
        <i class="fa fa-angle-right"></i>
        Roommates
      </a>
      <a href="<%= tickets_path %>" class="btn btn-lg btn-default ticket-nav">
        <i class="fa fa-angle-right"></i>
        Tickets
      </a>
      
    <% } else if (App.vars.isSmartrent) { %>
      <a href="#smartrent" class="btn btn-lg btn-default tab-nav">
        <i class="fa fa-angle-right"></i>
        SmartRent
      </a>
      <a href="#unit-history" class="btn btn-lg btn-primary tab-nav">
        <i class="fa fa-angle-right"></i>
        Resident History
      </a>
    <% } %>
    
  </div>
<% } else { %>
  <div class="nav-details">
    <a href="#resident-units" class="btn btn-lg btn-primary tab-nav">
      <i class="fa fa-angle-right"></i>
      Resident Units
    </a>
    <a href="<%= tickets_path %>" class="btn btn-lg btn-default ticket-nav">
      <i class="fa fa-angle-right"></i>
      Tickets
    </a>
  <% if ( App.vars.isSmartrent ) { %>
    <a href="#smartrent" class="btn btn-lg btn-default tab-nav">
      <i class="fa fa-angle-right"></i>
      SmartRent
    </a>
  <% } %>
  </div>
<% } %>

