<div id="resident-search">
  <h3> 
    <% if(App.vars.propertyObj){ %>
      Resident Search for <%= App.vars.propertyObj.name %>
    <% } else { %>
      Resident Search
    <% } %>
  </h3>
  <form action="<%= App.vars.residentsPath %>" id="resident-search-form">
    <% if(App.vars.isPropertyPage) { %>
      <div class="form-group">
        <input type="text" class="form-control" name="unit_code" value="" placeholder="Unit #"/>
      </div>
    <% } %>
    <div class="form-group">
      <input type="text" class="form-control" name="full_name" value="" placeholder="Full Name"/>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="email" value="" placeholder="Email"/>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="primary_phone" value="" placeholder="Phone"/>
    </div>
    
    <% if(App.vars.isPropertyPage) { %>
      <div class="form-group">
        <select class="form-control" name="status">
          <option value=""> Select Status </option>
          <option value="Current"> Current </option>
          <option value="Past"> Past </option>
          <option value="Future"> Future </option>
          <option value="Notice"> Notice </option>
        </select>
      </div>
      
      <div class="form-group">
        <select class="form-control" name="roommate">
          <option value=""> Select Roommate/Resident</option>
          <option value="1"> Show only roommate </option>
          <option value="0"> Show primary resident </option>
        </select>
      </div>
    <% } %>
    
    <button type="submit" class="btn btn-default btn-block search">SEARCH</button>
  </form>
</div>
