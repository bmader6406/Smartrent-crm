<% if (App.vars.ability.can("cud", "Property")) { %>
  <div class="crud-buttons">
    <table>
      <tr>
        <% if(updated_by != "xml_feed") { %>
          <td>
            <a href="<%= edit_path %>" class="btn btn-lg btn-primary edit"> <i class="fa fa-pencil"></i> Edit</a>
          </td>
        <% } %>
        <td>
          <a href="#" class="btn btn-lg btn-default archive"> <i class="fa fa-trash"></i> Archive</a>
        </td>
      </tr>
    </table>
  </div>
<% } %>

<div class="card">
  <h3> <%= name %> </h3>
  <ul class="list-unstyled">
    <li>
      <b>Address:</b> <%= address_line1 %>
    </li>
    <li>
      <b>Phone:</b> <%= phone %>
    </li>
    <li>
      <b>Hours:</b>
      <div style="display:inline-table">
        Monday:  <%= monday_open_time %> - <%= monday_close_time %><br>
        Tuesday:  <%= tuesday_open_time %> - <%= tuesday_close_time %><br>
        Wednesday:  <%= wednesday_open_time %> - <%= wednesday_close_time %><br>
        Thursday:  <%= thursday_open_time %> - <%= thursday_close_time %><br>
        Friday:  <%= friday_open_time %> - <%= friday_close_time %><br>
        Saturday:  <%= saturday_open_time %> - <%= saturday_close_time %><br>
        Sunday:  <%= sunday_open_time %> - <%= sunday_close_time %><br>
      </div>
    </li>
  </ul>
</div>
