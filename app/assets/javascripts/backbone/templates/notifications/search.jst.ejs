<div id="notification-search">
  <h3> Notification Search </h3>
  <form action="<%= App.vars.notificationsPath %>" id="notification-search-form">
    <div class="form-group">
      <select class="form-control" name="state" id="notification-state">
        <option value=""> Select State </option>
        <option value="pending" selected="selected"> Pending </option>
        <option value="acknowledged"> Acknowledged </option>
        <option value="replied"> Replied </option>
      </select>
    </div>
    
    <% if ( !App.vars.isPropertyPage ) { %>
      <div class="form-group">
        <select class="form-control" name="property_id">
          <option value=""> Select Property </option>
          <% for (var i=0, property; property=App.vars.crmProperties[i]; i++) { %>
    	      <option value="<%= property.val %>" > <%= property.label %> </option>
          <% } %>
        </select>
      </div>
      
    <% } else { %>
      <div class="form-group">
        <input type="text" class="form-control" name="unit_code" placeholder="Unit #"/>
      </div>
      
    <% } %>
    
    <div class="form-group">
      <input type="text" class="form-control" name="subject" placeholder="Subject"/>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="message" placeholder="Message"/>
    </div>
    
    <button type="submit" class="btn btn-default btn-block search">SEARCH</button>
  </form>
</div>