<div class="page-header">
  <h1>Listing Properties</h1>
</div>

<div class="card">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.name %></td>
          <td class="actions">
            <%= link_to 'Show', property_path(property) %>
            
            <% if can? :cud, @property %>
              <%= link_to 'Edit', edit_property_path(property) %>
              <%= link_to 'Delete', property_path(property), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <% if can? :cud, @property %>
    <%= link_to 'New Property', new_property_path(@property), :class => "btn btn-default" %>
  <% end %>
  
</div>