<%= form_for @user, :url => password_reset_path, :method => :put, :html => {:class => "form-auth"} do |f| %>
  <h2>Reset Password</h2>
  <p> Now you are able to create a new password! </p>
  
  <%= flash_messages %>
	<%= render "layouts/error_messages", :target => @user, :header_message => "Reset Failed!" %>
	
  <div class="form-group">
    <%= f.password_field :password, "placeholder" => "Password", :class => "form-control" %>
  </div>

  <div class="form-group">
	  <%= f.password_field :password_confirmation, "placeholder" => "Password Confirm", :class => "form-control" 	%>
	</div>

  <%= f.button "Reset", :class => "btn btn-primary btn-lg btn-block" %>
<% end %>