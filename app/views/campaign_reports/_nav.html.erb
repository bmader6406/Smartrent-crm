<ul id="top-tabs" class="nav nav-pills">
  <% if ["send_summary", "send_schedule", "recent_send"].include?(action_name) %>
    <li class="<%= "active" if action_name == "send_summary" %>">
  	  <%= link_to "Emails Sent", page_send_summary_reports_path(@property) %>
  	</li>
  	<li class="<%= "active" if action_name == "send_schedule" %>">
  	  <%= link_to "Emails Scheduled", page_send_schedule_reports_path(@property) %>
  	</li>
  	
  	<% if @property.group? %>
    	<li class="<%= "active" if action_name == "recent_send" %>">
    	  <%= link_to "Most Recent Email", page_recent_send_reports_path(@property) %>
    	</li>
  	<% end %>
  
  <% elsif [NewsletterCampaign, TourResponderCampaign, FormResponderCampaign, DripCampaign].any?{|clzz| @campaign.kind_of?(clzz) } %>
    <%
      overview_path = landing_campaign_reports_path(@campaign)
      subscribers_path = subscribers_landing_campaign_reports_path(@campaign)
    %>
    <li class="<%= "active" if action_name == "index" %>">
			<%= link_to "Overview", overview_path  %>
    </li>
    
    <li class="<%= "active" if action_name == "spam_watch" %>">
			<%= link_to "Spam Watch", spam_watch_landing_campaign_reports_path(@campaign)  %>
    </li>

		<li class="<%= "active" if action_name == "subscribers" %>">
			<%= link_to "Subscribers", subscribers_path  %>
    </li>
    
  <% else %> <!-- landing -->
    
  <% end %>
  
</ul>
